# ============================================================
# GroundedDINO-VL - Test Image
# Runs pytest inside a CUDA 12.8 environment
# ============================================================

FROM nvidia/cuda:12.8.0-devel-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive

# System deps: Python, build tools, OpenCV libs
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.10 python3.10-dev python3.10-venv python3-pip \
    build-essential git \
    libgl1 \
    libglib2.0-0 \
    ca-certificates \
 && rm -rf /var/lib/apt/lists/*

RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1 && \
    python3 -m pip install --upgrade pip

WORKDIR /workspace/groundeddino_vl

# Copy repo into image
COPY . .

# Install runtime + dev/test dependencies
# - requirements.txt: runtime deps
# - requirements-dev.txt: optional, if you have extra test/dev deps
RUN python3 -m pip install --no-cache-dir -r requirements.txt || true

# If you have requirements-dev.txt, uncomment this:
# RUN if [ -f requirements-dev.txt ]; then \
#       python3 -m pip install --no-cache-dir -r requirements-dev.txt; \
#     fi

# Install GroundedDINO-VL (editable install not needed inside container)
RUN python3 -m pip install --no-cache-dir .

# Quick import smoke test before running pytest
# Sanity check: import inside builder
RUN python3 -c "import groundeddino_vl; print('GroundedDINO-VL import OK in builder image')"

# Default command: run pytest
CMD ["python3", "-m", "pytest", "tests/", "-v", "--tb=short"]
